<div class="card-header d-flex justify-content-between align-items-center">
  <h3 class="card-title mt-1">
    Todo List
  </h3>
  <div>
    <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm text-white' %>
  </div>
</div>
<ul class="list-group">
  <% @todo_lists.each do |todo_list| %>
    <li class="list-group-item bg-light">
      <div>
        <div class="d-flex justify-content-start gap-2">
          <h5 class="m-0">
            <b><%= link_to todo_list.title, todo_list, class: "text-decoration-none"%></b>
          </h5>
          <p class="m-0">
          <span class="badge badge-pill bg-<%= todo_list.badge_color %>"><%= todo_list.status %></span>
          </p>
        </div>
        <p class="text-secondary m-0"><small><%= todo_list.percent_complete %>% Complete (<%= todo_list.completed_items %> / <%= todo_list.total_items %> Items)</small></p>
      </div>
    </li>
    <% end %>
</ul>
